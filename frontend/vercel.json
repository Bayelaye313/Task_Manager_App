{
    "rewrites": [
      {
        "source": "/api/v1/:path*",
        "destination": "https://task-manager-app-ba2d.onrender.com/api/v1/:path*"
      },
      {
        "source": "/register",
        "destination": "/index.html"
      },
      {
        "source": "/verify-email/:verificationToken",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/admin/users:path*",
        "destination": "/index.html"
      },
      {
        "source": "/user",
        "destination": "/index.html"
      },
      {
        "source": "/forgot-password",
        "destination": "/index.html"
      },
      {
        "source": "/reset-password/:resetPasswordToken",
        "destination": "/index.html"
      },
      {
        "source": "/change-password",
        "destination": "/index.html"
      }
    ]
  }
  